{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "Default",
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"composite": true,
		"module": "ESNext",
		"moduleResolution": "NodeNext",
		"skipLibCheck": true,
		"strict": true,
		"target": "ESNext",
		"plugins": [
			{
				"name": "typescript-plugin-css-modules",
				"options": { "classnameTransform": "camelCaseOnly" }
			}
		]
	},
	"exclude": ["node_modules"]
}
